<!DOCTYPE HTML>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    @RenderSection("styleHeader", required: false)
    @Styles.Render("~/bundles/csscore")
    @RenderSection("jsHeader", required: false)
    @Scripts.Render("~/bundles/jscore")
</head>
<body>
    <div class="wrap">
        <div class="header">
            <div class="headertop_desc">
            @{ Html.RenderAction("TopMenu", "Home");}
            </div>
            <div class="header_top">
                <div class="logo">
                    <a href="/" ref="nobody"><img src="/assets/client/images/logo.png" alt="_self" /></a>
                </div>
                 @{ Html.RenderAction("HeaderCart", "Home"); }
                <script type="text/javascript">
			function DropDown(el) {
				this.dd = el;
				this.initEvents();
			}
			DropDown.prototype = {
				initEvents : function() {
					var obj = this;

					obj.dd.on('click', function(event){
						$(this).toggleClass('active');
						event.stopPropagation();
					});
				}
			}

			$(function() {

				var dd = new DropDown( $('#dd') );

				$(document).click(function() {
					// all dropdowns
					$('.wrapper-dropdown-2').removeClass('active');
				});

			});

                </script>
                <div class="clear"></div>
            </div>
            <div class="header_bottom">
               @{Html.RenderAction("MainMenu", "Home");}
                <div class="search_box">
                    <form action="/tim-kiem" method="get">
                        <input type="text" id="txtKeyword" name="keyword" placeholder="Gỏ từ khoá"><input type="submit" value="">
                    </form>
                </div>
                <div class="clear"></div>
            </div>
            @RenderSection("slide",required:false)
           
        </div>
        <div class="main">
            @RenderBody()
         
        </div>
    </div>
    <div class="footer">
    @{ Html.RenderAction("Footer", "Home");}
    </div>
    <script type="text/javascript">
		$(document).ready(function() {
			$().UItoTop({ easingType: 'easeOutQuart' });

		});
    </script>
    <a href="#" id="toTop"><span id="toTopHover"> </span></a>
   @Scripts.Render("~/bundles/base");
    @RenderSection("jsFooter", required: false)
</body>
</html>

