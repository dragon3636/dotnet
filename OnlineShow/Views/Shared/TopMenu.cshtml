 @model List<Model.EF.Menu>
    
 <div class="call">
    <p><span>Hổ trợ khách hàng ?</span> số điện thoại <span class="number">0233-731-599</span></span></p>
</div>
<div class="account_desc">
    @{
        var session = (OnlineShow.Common.UserLogin)Session[Common.CommonConstants.USER_SESSION];

    }
    @if (session == null)
    {
        <ul>
            @foreach (var item in Model)
            {
                <li><a href="@item.Link">@item.Text</a></li>
            }
        </ul>

    }
    else
    {
        var result = session.GroupID != Common.CommonConstants.MEMBER_GROUP || session.GroupID ==null;
        <ul>
            <li> Xin chào : @session.UserName</li>
            <li>@Html.ActionLink("thoat","Logout","User")</li>
             @if (result)
             {
                <li>@Html.ActionLink("Trang quản lý", "Login", "Admin")</li>
             }
        </ul>
    }

</div>
<div class="clear"></div>