@model List<OnlineShow.Models.CarItem>
@{
    ViewBag.Title = "Giỏi hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
<script src="/assets/client/js/controller/cartController.js"></script>
    }
<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>Danh sách sản phẩm</h3>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @if (Model.Count > 0)
        {
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <td> Mã SP</td>
                        <td> Tên SP</td>
                        <td> Ảnh SP</td>
                        <td>Số lượng </td>
                        <td> Đơn giá</td>
                        <td> Thành tiền</td>
                        <td>#</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                    var product = item.Product;
                        <tr>
                            <td>@product.ID</td>
                            <td>@product.Name</td>
                            <td> <img src="@product.Image" width="100" /></td>
                            <td> <input type="text" data-id="@product.ID" class="txtQuantity" value="@item.Quantity" /> </td>
                            <td> @product.Price.GetValueOrDefault(0).ToString("N0")Đ</td>
                            <td>@((product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))Đ</td>
                            <td>
                                <button href="#" class="btn btn-danger btnDelete" data-id="@product.ID">Xóa</button>

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            <button type="button" class="btn btn-outline btn-primary">Success</button>
            <button type="button"  id="btnContinue" class="btn btn-outline btn-success">Tiếp tục mua hàng</button>
            <button type="button" id="btnUpdate"  class="btn btn-outline btn-warning">Cập nhật giỏ hàng</button>
            <button type="button" id="btnPayment" class="btn btn-outline btn-info"> Thanh toán</button>
            <button type="button" id="btnDeleteAll" class="btn btn-outline btn-danger">Xóa giỏ hàng</button>
        }
        else
        {

            <div>
                <span class="alert alert-danger center-block"> Chưa có sản phẩm nào </span>
            </div>

        }
    </div>

    </div>

