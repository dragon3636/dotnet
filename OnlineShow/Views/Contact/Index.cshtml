@model Model.EF.Contact
@{
    ViewBag.Title = "Liên hệ ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #mapCanvas {
        width: 100%;
        height: 400px;
        background-color: grey;
    }
</style>
@section jsFooter{

    <script>
// This example displays a marker at the center of Australia.
        // When the user clicks the marker, an info window opens.
        //16.075608, 108.155858
        function initMap() {
            var uluru = { lat: 16.0365086, lng: 108.2159527};
           

            var map = new google.maps.Map(document.getElementById('mapCanvas'), {
                zoom: 18,
                center: uluru
            });

            var contentString = '@Model.Content';

            var infowindow = new google.maps.InfoWindow({
                content: contentString
            });

            var marker = new google.maps.Marker({
                position: uluru,
                map: map,
                title: 'Uluru (Ayers Rock)'
            });
            marker.addListener('click', function () {
                infowindow.open(map, marker);
            });
            google.maps.event.addDomListener(window, 'load', initMap);
        }</script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDX76t7FIbBT0jYq7W-PN_5bhh44XbWlV8&callback=initMap"></script>
<script src="~/assets/client/js/controller/feedback.js"></script>
}

<div class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-6">
                <h3>Thông tin liên hệ</h3>
                @Html.Raw(Model.Content)
                <br />
                <form role="form">
                    <div class="form-group col-lg-9">
                        <label>Họ tên</label>
                        <input type="text" id="txtName" class="form-control" placeholder="Username" />
                    </div>
                    <div class="form-group col-lg-9">
                        <label>Điện thoại</label>
                        <input type="text" id="txtMobile" class="form-control" placeholder="Username" />
                    </div>
                    <div class="form-group col-lg-9">
                        <label>Địa chỉ</label>
                        <input type="text" id="txtAddress" class="form-control" placeholder="Username" />
                    </div>
                    <div class="form-group col-lg-9">
                        <label>Email</label>
                        <input type="text" id="txtEmail" class="form-control" placeholder="Username" />
                    </div>
                    <div class="form-group col-lg-12">
                        <label>Yêu cầu</label>
                         <textarea id="txtContent" class="form-control" rows="3">
                         </textarea>
                        <button id="btnSend" class="btn btn-success">gửi đi</button>
                    </div>
                    
                </form>
            </div>
            <div class="col-lg-6">
                <h3> Bản đồ</h3>
                <div class="map" id="mapCanvas"></div>
            </div>
        </div>
    </div>

</div>

